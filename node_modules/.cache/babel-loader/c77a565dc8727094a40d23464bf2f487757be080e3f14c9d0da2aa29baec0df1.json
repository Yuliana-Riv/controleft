{"ast":null,"code":"import { mapActions } from 'vuex';\nimport AddB from './addblog.vue';\nimport EditB from './editBlog.vue';\nexport default {\n  name: 'Blog',\n  components: {\n    AddB,\n    EditB\n  },\n  data() {\n    return {\n      status: '',\n      message: '',\n      item: '',\n      search_value: '',\n      updsearchcli: '',\n      currentPage: 1,\n      itemsPerPage: 12,\n      active: false,\n      viewModal: false,\n      itemDel: '',\n      radius: false\n    };\n  },\n  created() {\n    this.getAllInfoBlo('blog');\n  },\n  updated() {\n    if (this.search_value != this.updsearchcli) {\n      this.updsearchcli = this.search_value;\n      let option = 'blog';\n      let value = this.search_value;\n      let payload = {\n        option: option,\n        search: value\n      };\n      if (value != \"\") {\n        this.$store.dispatch(\"blog/searchBlo\", payload);\n      } else {\n        this.getAllInfoBlo('blog');\n      }\n    }\n  },\n  computed: {\n    data() {\n      return this.$store.getters[\"blog/data\"];\n    },\n    historyOption() {\n      return this.$store.getters[\"blog/getHistoryOption\"];\n    },\n    //Paginacion\n    allItems() {\n      return Object.keys(this.data).map(pid => this.data[pid]);\n    },\n    filteredItems() {\n      return this.allItems.slice((this.currentPage - 1) * this.itemsPerPage, this.currentPage * this.itemsPerPage);\n    },\n    totalPages() {\n      let total = Math.ceil(this.allItems.length / this.itemsPerPage);\n      if (total < this.currentPage) {\n        this.currentPage = 1;\n      }\n      return total;\n    }\n  },\n  methods: {\n    ...mapActions('blog', ['getAllInfoBlo']),\n    ...mapActions('blog', ['setHistoryOptionBlo']),\n    ...mapActions('blog', ['setAddedBlo']),\n    changeView(option, item) {\n      this.item = item;\n      this.setAddedBlo(item);\n      this.setHistoryOptionBlo(option);\n    },\n    activeRadius() {\n      this.radius ? this.radius = false : this.radius = true;\n    },\n    showModal: function (id) {\n      this.itemDel = id;\n      this.viewModal = true;\n    },\n    closeModal: function () {\n      this.viewModal = false;\n      this.itemDel = '';\n    },\n    wait: function () {\n      setTimeout(() => this.$router.go(), 200);\n    },\n    delStatus: function () {\n      setTimeout(() => this.delMsgs(), 2000);\n      setTimeout(() => this.wait(), 500);\n    },\n    delMsgs: function () {\n      this.status = \"\";\n      this.message = \"\";\n    },\n    eliminar: async function () {\n      let id = this.itemDel;\n      this.status = '';\n      this.message = '';\n      let result = await this.$store.dispatch(\"blog/deleteItemBlo\", {\n        option: 'blog',\n        id: id\n      });\n      if (result.status == 'error') {\n        this.message = result.message;\n        this.status = 'error';\n        this.delStatus();\n      } else {\n        this.status = '';\n        this.message = '';\n        this.wait();\n      }\n    },\n    closeSelect() {\n      document.getElementById(\"select-ch\").checked = false;\n      this.active = false;\n    },\n    search: async function (value) {\n      let option = 'blog';\n      let payload = {\n        option: option,\n        search: value\n      };\n      if (value != \"\") {\n        this.$store.dispatch(\"blog/searchBlo\", payload);\n      } else {\n        this.getAllInfoBlo('blog');\n      }\n    },\n    // botones de paginacion.\n    next() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage++;\n      }\n    },\n    prev() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n      }\n    }\n  }\n};","map":{"version":3,"mappings":"AAkKA;AACA;AACA;AACA;EACAA;EACAC;IACAC;IACAC;EACA;EACAC;IACA;MAEAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;MACAC;IAEA;EACA;EACAC;IACA;EACA;EAGAC;IAGA;MACA;MAEA;MAEA;MAIA;QACAC;QACAC;MACA;MACA;QACA;MACA;QACA;MACA;IACA;EAGA;EACAC;IACAhB;MACA;IACA;IACAiB;MACA;IACA;IAGA;IACAC;MACA;IACA;IACAC;MAEA;IACA;IACAC;MAC